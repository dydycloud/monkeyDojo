<!-- Side Bar -->
<div class="six mobile-four columns">
  <%= image_tag('/images/bookmonkey.png', :size => '250x250' )%>
  <div class="hide-for-small panel">
    <h3>Welcome to the Dojo</h3>
    <h5 class="subheader">Here is the place where you gonna learn everything you need to became a Ruby Monkey Ninja.</h5>
  </div>
  <div id="cart">
    <% if @cart %>
     <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
      <% end %>
    <% end %>
  </div>
</div>
<!-- End Side Bar -->
<!-- Thumbnails -->
<div class="six columns">
  <h3>Last Scrolls</h3><hr>
  <div class="row">
    <% @products.each do |product| %>
      <div class="four mobile-two columns" id="product_home">
        <%= image_tag product.image_url %>
        <div class="panel" id="entry">
          <h5><small><%= product.title %></small></h5>
          <h6 class="subheader" id="price">
            <%= number_to_currency(product.price) %>
          </h6>
          <p><%= link_to 'More...', product %></p>
          <p>
            <%= button_to 'Buy', line_items_path(:product_id => product), :remote => true %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- End Thumbnails -->