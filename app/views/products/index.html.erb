<div class="twelve columns">
<h3>Listing products</h3>
<h5 class="subheader">Here is the place to manage all your products</h5>
<button><%= link_to 'New Product', new_product_path %></button>
<table border="1">
  <tr>
    <th>Cover</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
        <td><%= image_tag product.image_url %></td>
        <td><%= product.title %></td>
        <td><small><%=raw product.description %></small></td>
        <td><%= number_to_currency(product.price) %></td>
        <td>
          <%= link_to 'Show', product %>
        </td>
        <td>
          <%= link_to 'Edit', edit_product_path(product) %>
        </td>
        <td>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
  <% end %>
</table>
</div>
